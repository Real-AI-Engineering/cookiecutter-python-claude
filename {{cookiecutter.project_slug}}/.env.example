# {{cookiecutter.project_name}} Environment Configuration
# Copy this file to .env and update values for your environment

{% if cookiecutter.project_type != "cli" -%}
# Application Settings
APP_NAME={{cookiecutter.project_name}}
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or console

# Health Check
HEALTH_CHECK_GRACE_PERIOD=30

# CORS (comma-separated origins)
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database (example for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/{{cookiecutter.project_slug}}
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# Redis (example for future use)
# REDIS_URL=redis://localhost:6379/0

# External APIs (example)
# API_KEY=your-api-key-here
# API_SECRET=your-api-secret-here
# API_BASE_URL=https://api.example.com

# Security
# SECRET_KEY=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_MINUTES=30

# Feature Flags
# ENABLE_FEATURE_X=false
# ENABLE_FEATURE_Y=true

{% else -%}
# Application Settings
DEBUG=false
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# Add your environment variables here
# Example:
# API_KEY=your-api-key-here
# DATABASE_URL=sqlite:///./{{cookiecutter.project_slug}}.db

{% endif -%}